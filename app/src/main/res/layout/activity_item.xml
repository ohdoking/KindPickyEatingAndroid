<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="80dp"
    android:background="@drawable/xml_border">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/rstr_logo"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/bedge"
            android:layout_alignRight="@+id/rstr_logo"
            android:id="@+id/rstr_badge"
            />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RatingBar"
            android:layout_gravity="center"
            android:layout_alignBottom="@+id/rstr_badge"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_margin="1dp"
            android:stepSize="0.1"
            android:layout_marginLeft="4dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rstr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:textSize="10pt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rstr_address"
            android:textSize="8pt"
            android:textColor="#222222"
            android:layout_marginTop="5dp"
            android:layout_alignRight="@+id/RatingBar"
            android:layout_alignBottom="@+id/rstr_name"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/marker5"
            android:padding="0dp"
            android:layout_gravity="top|right"
            android:background="?selectableItemBackground"
            android:scaleType="centerInside"/>

    </LinearLayout>

</LinearLayout>